<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagen_mirenglon"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nombreCiudad_mirenglon"
            android:layout_toRightOf="@+id/imagen_mirenglon"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:text="Small Text"
            android:id="@+id/descripcion_mirenglon"
            android:layout_below="@+id/nombreCiudad_mirenglon"
            android:layout_alignLeft="@+id/nombreCiudad_mirenglon" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/minima_mirenglon"
        android:layout_below="@+id/descripcion_mirenglon"
        android:layout_alignLeft="@+id/nombreCiudad_mirenglon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/maxima_mirenglon"
            android:layout_below="@+id/minima_mirenglon"
            android:layout_alignLeft="@+id/nombreCiudad_mirenglon" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ffd5d5d5"
            android:id="@+id/linea"
            android:layout_below="@+id/imagen_mirenglon"
            android:layout_toRightOf="@+id/imagen_mirenglon">

        </View>


    </RelativeLayout>
</androidx.cardview.widget.CardView>